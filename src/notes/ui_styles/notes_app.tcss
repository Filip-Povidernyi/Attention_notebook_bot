
#container {
    layout: grid;
    grid-size: 2 2;

    grid-columns: 2fr 1fr;
    grid-rows: 3 1fr;
    width: 100%;
    height: 100%;

    &.preview-hidden {
        grid-columns: 3fr 0fr;
    }
}

#search_input {
    border: solid green;
}

#table {
    border: solid green;
    height: 100%;
}

#preview {
    height: 100%;
    row-span: 2;
}
